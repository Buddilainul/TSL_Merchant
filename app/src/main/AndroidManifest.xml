<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buddila.tslmerchant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TSLMerchant">
        <activity
            android:name=".HotelRegisterScreen"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".CabRegisterScreen"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".HotelDashboard"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".CabDashboard"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".MerchantTypeSelection"
            android:exported="true"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TSLMerchant.TransparentStatusBar" />
    </application>

</manifest>